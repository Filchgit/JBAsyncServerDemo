<Window x:Class="JBAsyncServerDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JBAsyncServerDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
    
        <Button x:Name="btnAcceptIncConn" Content="Accept Incoming Connection" HorizontalAlignment="Left" Margin="20,376,0,0" VerticalAlignment="Top" Width="172" Click="btnAcceptIncConn_Click" />
        <TextBox x:Name="txtMessageBox" HorizontalAlignment="Left" Height="39" Margin="441,357,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="288" Grid.ColumnSpan="2"/>
        <Button x:Name="btnSendAllClients" Content="Send to all clients" HorizontalAlignment="Left" Margin="206,376,0,0" VerticalAlignment="Top" Width="129" Click="btnSendAllClients_Click"/>
        <Label Content="Message" HorizontalAlignment="Left" Margin="364,358,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnStopServer" Content="Stop Server" HorizontalAlignment="Left" Margin="20,343,0,0" VerticalAlignment="Top" Width="172" Click="btnStopServer_Click"  />

    </Grid>
</Window>
